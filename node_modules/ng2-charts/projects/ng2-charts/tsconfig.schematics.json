{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "schematics",
    "lib": [
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../../dist/ng2-charts/schematics",
    "noEmitOnError": false,
    "strictNullChecks": true,
    "noImplicitOverride": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strictFunctionTypes": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "target": "es6",
    "types": [
      "jasmine",
      "node"
    ]
  },
  "include": [
    "schematics/**/*.ts"
  ],
  "exclude": [
    "schematics/**/*.spec.ts",
    "schematics/ng-generate/*/files/**/*.ts"
  ]
}
